<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#F0F0F0"/>

    <!-- Border (stroke) color -->
    <stroke
        android:width="1dp"
    android:color="@color/primary"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Padding inside the shape -->
    <padding
        android:top="8dp"
        android:bottom="8dp"
        android:left="0dp"
        android:right="0dp"/>
</shape>
